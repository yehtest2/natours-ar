extends base

block content 
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Sign into your account
      form.form.form--sign
        .form__group
          label.form__label(for='name') name
          input#name.form__input(type='text', placeholder='email', required)
          label.form__label(for='email') email
          input#email.form__input(type='text', placeholder='password', required)
          label.form__label(for='role') role
          input#role.form__input(type='text', placeholder='role', required)
          label.form__label(for='password') password
          input#password.form__input(type='text', placeholder='name', required)
        .form__group.ma-bt-md
          label.form__label(for='PasswordConfrim') PasswordConfrim
          input#PasswordConfrim.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Signup